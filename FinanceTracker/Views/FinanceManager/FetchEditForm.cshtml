@using FinanceTracker.ViewModel
@model TransactionEditFormViewModel



@{
    var formId = $"editForm{Model.TransactionId}";
}

<!-- Modal -->

<div class="modal fade" id="editModal@(Model.TransactionId)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Transaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form  asp-antiforgery="true" id="@formId">
                    <h5 id="editFormValidation" class="text-danger text-center"></h5>
                    <div class="row">
                        <input asp-for="amount" type="number" class="form-control" placeholder="Amount:">
                        <textarea asp-for="description" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="description"></textarea>
                        <select class="form-control" asp-for="CategoryId" asp-items="Model.selectListItems">
                        </select>
                        <label asp-for="TimeStamp">Time</label>

                        <input asp-for="TimeStamp" />
                        <div class="col-1">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                        <input type="hidden" asp-for="TransactionId" />

                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

