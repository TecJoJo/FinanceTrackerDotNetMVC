@using FinanceTracker.ViewModel
@model TransactionEditFormView

<form asp-controller="FinanceManager" asp-action="Edit" method="post">
    <div class="row">
        <div class="col-3">
            <input asp-for="Amount" class="form-control" placeholder="Amount">
        </div>
        <div class="col-3">
            <input asp-for="Description" class="form-control" placeholder="Description">
        </div>
       
        <div class="col-1">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>