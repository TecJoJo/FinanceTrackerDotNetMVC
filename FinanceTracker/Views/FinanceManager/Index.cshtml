@using System.Security.Claims
@using FinanceTracker.Models.Enums
@using FinanceTracker.ViewModel
@{
    ViewData["Title"] = "Finance Manager";
}

@model FinanceTrackerIndexViewModel

@{

var model = Model;
}

@if (User.Identity.IsAuthenticated)
{
    
    var adminString = Enum.GetName(typeof(Role), Role.admin)!;
    

    //@foreach (var expense in Model.Expenses)
    //{
    //    <h1>@(expense.amount) at @(expense.TimeStamp)</h1>
    //}
    //
    //@foreach (var Income in Model.Incomes)
    //{
    //    <h1>@(Income.amount) at @(Income.TimeStamp)</h1>
    //} 
    <p class="display-1">@(User.FindFirst("userName").Value)'s recent cash flow</p>

    <button type="button" id="modalToggler" class="btn btn-primary">
        New transaction
    </button>
    <div id="createModal"></div>

    
    <div class="container-lg row justify-content-around ">

        <div class="col-10">
            @*<button type="button" id="ModalToggler" class="btn btn-primary">New Transaction</button>*@
            <p class="display-2">Recent Transactions</p>
            <ul class="list-group">
                @if(Model.transactionListItems.Count == 0)
                {
                    <h1>Hi, it was a great day!</h1>
                }else
                {
                    
                foreach (TransactionViewModel transaction in Model.transactionListItems)
                {
                    <li class="list-group-item @(transaction.Type == "Income"?"list-group-item-primary":"list-group-item-warning") d-flex justify-content-around">
                        <p class="w-75 m-auto">@(transaction.Type.ToUpper()): @(transaction.Amount)€ at @(transaction.TimeStamp) for @(transaction.Category)</p>
                        <div><span class="mx-1"><button id="editBtn" data-id=@(transaction.Id) data-type=@(transaction.Type) class="btn btn-outline-primary">Edit</button></span><span class="mx-1"><button id="deleteBtn" data-id=@(transaction.Id) class="btn btn-outline-danger">Delete</button></span></div>
                    </li>
                    <div id="editContainer"></div>
                    
                }
                }



                
            </ul>
    </div>
 
    </div>

}
else
{
    <h1>hello, Please log in first</h1>
}



@section Scripts{
    <script src="~/js/EditFormToggle.js"></script>
    <script src="~/js/AddTransactionModal.js"></script>
    <script src="~/js/DeleteForm.js"></script>

};